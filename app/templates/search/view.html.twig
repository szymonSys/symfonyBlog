{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.article_list'|trans }}
{% endblock %}

{% block body %}
    <h1>Wynik ({{ authors|length + articles|length + tags|length }})</h1>

    <h2>Autorzy ({{ authors|length }})</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.author'|trans }}</th>
            <th>{{ 'label.created_date'|trans }}</th>
            <th>{{ 'label.number_of_article'|trans }}</th>
            <th>{{ 'label.number_of_followers'|trans }}</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>{{ 'label.options'|trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for author in authors %}

            <tr>
                <td>
                    <a href="{{ url('author_view', {id: author.id, firstName: author.firstName}) }}">
                        {% if author.avatar.file is defined %}
                            <img width="60px" src="{{ asset('uploads/photos/'~ author.avatar.file.filename) }}" alt="">
                        {% else %}
                            <img width="60px" src="{{ asset('uploads/photos/user_placeholder_image.jpg') }}" alt="">
                        {% endif %}
                        <span>{{ author.firstName }}</span>
                        {% if author.blogName is not null %}
                            <span> ({{ author.blogName }})</span>
                        {% endif %}
                    </a>
                </td>
                <td>{{ author.createdAt|localizeddate }}</td>
                <td>{{ author.articles|length }}</td>
                <td>{{ author.followers|length }}</td>
                <td></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <h2>{{  'title.article_list'|trans }} ({{ articles|length }})</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.author'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.published_date'|trans }}</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>{{ 'label.options'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <td>
                        <a href="{{ url('article_view', {id: article.id}) }}" title="view">
                            {% if article.coverPhoto.file is defined %}
                                <img width="120px" src="{{ asset('uploads/photos/'~ article.coverPhoto.file.filename) }}" alt="">
                            {% else %}
                                <img width="120px" src="{{ asset('uploads/photos/cover_placeholder_image.jpg') }}">
                            {% endif %}
                            <span>{{ article.title }}</span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('author_view', {id: article.author.id, firstName: article.author.firstName}) }}">
                            {% if article.author.avatar.file is defined %}
                                <img width="60px" src="{{ asset('uploads/photos/'~ article.author.avatar.file.filename) }}" alt="">
                            {% else %}
                                <img width="60px" src="{{ asset('uploads/photos/user_placeholder_image.jpg') }}" alt="">
                            {% endif %}
                            <span>{{ article.author.firstName }}</span>
                            {% if article.author.blogName is not null %}
                                <span> ({{ article.author.blogName }})</span>
                            {% endif %}
                        </a>
                    </td>
                    <td><a href="{{ url('category_view', {name: article.category.name}) }}">{{ article.category.name }}</a></td>
                    <td>{{ article.publishedAt|localizeddate }}</td>

                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ url('article_edit', {id: article.id}) }}" title="edit">
                                {{ 'action.edit'|trans }}
                            </a><br>
                            <a href="{{ url('article_delete', {id: article.id}) }}" title="delete">
                                {{ 'action.delete'|trans }}
                            </a>
                        </td>
                    {% endif %}
                </tr>

            {% endfor %}

            </tbody>
        </table>

    <h3>Tagi ({{ tags|length }})</h3>

    {% for tag in tags %}

        <h4>{{ tag.name }}</h4>

        <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.author'|trans }}</th>
            <th>{{ 'label.category'|trans }}</th>
            <th>{{ 'label.published_date'|trans }}</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>{{ 'label.options'|trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>

        {% for article in tag.articles %}
            <tr>
                <td>
                    <a href="{{ url('article_view', {id: article.id}) }}" title="view">
                        {% if article.coverPhoto.file is defined %}
                            <img width="120px" src="{{ asset('uploads/photos/'~ article.coverPhoto.file.filename) }}" alt="">
                        {% else %}
                            <img width="120px" src="{{ asset('uploads/photos/cover_placeholder_image.jpg') }}">
                        {% endif %}
                        <span>{{ article.title }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ url('author_view', {id: article.author.id, firstName: article.author.firstName}) }}">
                        {% if article.author.avatar.file is defined %}
                            <img width="60px" src="{{ asset('uploads/photos/'~ article.author.avatar.file.filename) }}" alt="">
                        {% else %}
                            <img width="60px" src="{{ asset('uploads/photos/user_placeholder_image.jpg') }}" alt="">
                        {% endif %}
                        <span>{{ article.author.firstName }}</span>
                        {% if article.author.blogName is not null %}
                            <span> ({{ article.author.blogName }})</span>
                        {% endif %}
                    </a>
                </td>
                <td><a href="{{ url('category_view', {name: article.category.name}) }}">{{ article.category.name }}</a></td>
                <td>{{ article.publishedAt|localizeddate }}</td>

                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ url('article_edit', {id: article.id}) }}" title="edit">
                            {{ 'action.edit'|trans }}
                        </a><br>
                        <a href="{{ url('article_delete', {id: article.id}) }}" title="delete">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
        </table>

    {% endfor %}

        <p>
            {{ 'message.empty_list'|trans }}
        </p>

{% endblock %}