{% extends 'base.html.twig' %}

{% block title %}
    {{ authorData[0].firstName }}
{% endblock %}

{% block body %}
    <h1>{{ authorData[0].firstName }}</h1>
    <p>{{ authorData[0].id }}</p>
    <p>{{ authorData[0].email}}</p>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% if app.user.id == authorData[0].id%}
            <a href="{{ url('subscriptions_followers') }}">{{ 'title.subscription_list'|trans }}</a>
        {% endif %}
        {% if not isSubscribed %}
            <a href="{{ url('subscription_follow', {id: authorData[0].id}) }}" title="follow">{{ 'label.follow'|trans }}</a>
        {% else %}
            <a href="{{ url('subscription_unfollow', {id: authorData[0].id}) }}" title="unfollow">{{ 'label.unfollow'|trans }}</a>
        {% endif %}
    {% endif %}
    {#        <p>obserwujący: {{ authorData.followers|length }}</p>#}
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        {#        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}#}
        {#            <a href="{{ url('article_new') }}" title="new">#}
        {#                dodaj artykuł#}
        {#            </a>#}
        {#        {% endif %}#}
        <p>blog: {{ authorData[0].firstName }}</p>
{#        {% for follower in authorData[0].followers if follower.id == loggedUser %}#}

{#        {% endfor %}#}
{#        <p>obserwujący: {{ authorData.followers|length }}</p>#}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'a.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.published_date'|trans, 'a.publishedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'a.title') }}</th>
                <th>{{ 'label.author'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>{{ 'label.options'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for article in pagination %}

                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.publishedAt|localizeddate }}</td>
                    <td><a href="{{ url('article_view', {id: article.id}) }}" title="view">{{ article.title }}</a></td>
                    <td>{{ article.author.firstName }}</td>
                    <td><a href="{{ url('category_view', {name: article.category.name}) }}">{{ article.category.name }}</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ url('article_edit', {id: article.id}) }}" title="edit">
                                {{ 'action.edit'|trans }}
                            </a><br>
                            <a href="{{ url('article_delete', {id: article.id}) }}" title="delete">
                                {{ 'action.delete'|trans }}
                            </a>
                        </td>
                    {% endif %}
                </tr>

            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}